{# templates/proj_quests.html.twig #}


<div class="quest-container">
  <h3>Quests</h3>
      {% for quest in gameState.quests %}
        <div class="quest">
          <p>{{quest.getName()}}
            {% if (quest.isComplete()) %}
            COMPLETED
            {% endif %}
            <form class="room-showhint" method="post" action="">
              <button type="submit" name="showHint" value="{{ quest.getId }}"
                onClick="this.form.action='{{ path('proj/play_showHint_callback') }}';"
              >Show hint</button>
            </form>
          </p>
          
        </div>
      {% endfor %}
</div>


