{# templates/game_start.html.twig #}

{% include 'incl/header.html.twig' %}


<body>
    {% include 'incl/nav.html.twig' %}


    <div class="content-area">
        <div class="content">
            {% include 'incl/flash.html.twig' %}
            <h2>{{ heading }}</h2>
            {{ content|raw }}

            {{ dump(books) }}

            <form method="get" action="">
                <input type="submit" name="back" value="Tillbaka till översikt"
                    onClick="this.form.action='{{ path('library') }}';"
                >
            </form>

            <form method="post" action="">
                <input type="input" name="title" placeholder="Titel (*)" required>
                <input type="input" name="author" placeholder="Författare">
                <input type="input" name="isbn" placeholder="ISBN (*)" required>
                <input type="input" name="picture" placeholder="Bild">
                <input type="submit" name="edit" value="Spara ändringar"
                    onClick="this.form.action='{{ path('library_edit_callback') }}';"
                >
            </form>
        </div>
    </div>

    {% include 'incl/footer.html.twig' %}
</body>

</html>


