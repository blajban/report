{# templates/report.html.twig #}

{% include 'incl/header.html.twig' %}


<body>
    {% include 'incl/nav.html.twig' %}

    <div class="content-area">
        <div class="content">
            
            {% include 'incl/flash.html.twig' %}

            <div class="card-area">

                {{ dump(gameState) }}

                <h4>Remaining cards</h4>
                <div class="player-area">
                    <div class="card back">{{ gameState["remaining_cards"] }}</div>
                </div>

                <h4>{{ gameState["bank"]["name"] }}</h4>
                    <div class="player-area">
                        {% for card in gameState["bank"]["hand"] %}
                            <div class="card {{ card.getCssColor() }} value{{ card.getValue() }}">
                            </div>
                        {% endfor %}
                    </div>

                <h4>{{ gameState["player"]["name"] }}</h4>
                    <div class="player-area">
                        {% for card in gameState["player"]["hand"] %}
                            <div class="card {{ card.getCssColor() }} value{{ card.getValue() }}">
                            </div>
                        {% endfor %}
                    </div>

            </div>

            
            
        </div>
    </div>

    {% include 'incl/footer.html.twig' %}
</body>

</html>


